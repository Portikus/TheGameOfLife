<UserControl
    x:Class="GameOfLife.Frontend.Wpf.Views.GameView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GameOfLife.Frontend.Wpf.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:GameOfLife.Frontend.Wpf.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:GameViewModel}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <DockPanel>
        <DockPanel DockPanel.Dock="Left">
            <Button
                VerticalAlignment="Bottom"
                Command="{Binding EndTurnCommand}"
                Content="End round" />
            <Label VerticalAlignment="Top" Content="{Binding PlayerProvider.CurrentPlayer.Name}" />
        </DockPanel>
        <local:GameMapView DataContext="{Binding GameMapViewModel}"/>
    </DockPanel>
</UserControl>