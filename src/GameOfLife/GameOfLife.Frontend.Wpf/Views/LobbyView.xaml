<UserControl
    x:Class="GameOfLife.Frontend.Wpf.Views.LobbyView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GameOfLife.Frontend.Wpf.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:GameOfLife.Frontend.Wpf.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:LobbyViewModel}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <DockPanel>
        <TextBox DockPanel.Dock="Top" Text="{Binding PlayerName}" />
        <TextBox DockPanel.Dock="Top" Text="{Binding LocalAddress}" />
        <Button
            Command="{Binding StartCommand}"
            Content="Start"
            DockPanel.Dock="Top" />
        <Label Content="{Binding Status}" DockPanel.Dock="Bottom" />
        <ListView ItemsSource="{Binding LobbyPlayer}" />
    </DockPanel>
</UserControl>
